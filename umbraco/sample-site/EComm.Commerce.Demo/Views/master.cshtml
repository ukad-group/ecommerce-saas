@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo Shop</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-3" href="/" aria-label="Demo Shop">
                    <span class="brand-mark" aria-hidden="true">
                        <img src="/assets/branding/ukad-logo-blue.svg" alt="UKAD logo" />
                    </span>
                    <span class="brand-text">
                        <span class="brand-title">Demo Shop</span>
                        <span class="brand-tag">Built by UKAD | Powered by Umbraco</span>
                    </span>
                </a>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-5">
        @RenderBody()
    </main>
    <footer class="bg-dark text-light mt-5 py-4">
        <div class="container">
            <p class="text-muted mb-0">&copy; 2025 Demo Shop</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
