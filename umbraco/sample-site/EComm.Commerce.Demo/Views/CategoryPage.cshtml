@using EComm.Commerce.Demo.Controllers
@using Umbraco.Cms.Core.Models.PublishedContent
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CategoryPageViewModel>
@{
    Layout = "master.cshtml";
    ViewData["Title"] = Model.CategoryName ?? "Products";
}

<div class="container my-4">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }
    else
    {
        <div class="row">
            <!-- Category Navigation Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Categories</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        @{
                            // Build path to current page for expand/collapse
                            var currentPath = new List<int>();
                            var current = Model as Umbraco.Cms.Core.Models.PublishedContent.IPublishedContent;
                            while (current != null)
                            {
                                currentPath.Add(current.Id);
                                current = current.Parent();
                            }
                        }

                        @if (Model.RootCategoryPages.Any())
                        {
                            ViewBag.CurrentPageId = Model.Id;
                            ViewBag.CurrentPath = currentPath;

                            <ul class="list-group list-group-flush">
                                @foreach (var rootCategory in Model.RootCategoryPages)
                                {
                                    @await Html.PartialAsync("CategoryTree", rootCategory)
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="p-3 text-muted">
                                <i class="bi bi-info-circle"></i> No categories found
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Products Section -->
            <div class="col-md-9">
                <!-- Page Header -->
                <div class="mb-4">
                    <h1>@Model.CategoryName</h1>
                    <p class="text-muted">@Model.TotalProducts products found</p>
                </div>

                <!-- Products Grid -->
                @if (Model.Products.Any())
                {
                    <div class="row g-4">
                        @foreach (var product in Model.Products)
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <div class="card h-100 hover-shadow">
                                    @{
                                        var thumbnailImage = product.Images != null && product.Images.Any()
                                        ? product.Images.First()
                                        : "https://via.placeholder.com/300x300?text=" + Uri.EscapeDataString(product.Name ?? "Product");
                                    }
                                    @{
                                        var productSlug = !string.IsNullOrEmpty(product.Slug) ? product.Slug : product.Id;
                                        string? productUrl = null;

                                        // If current page has a category, use it
                                        if (!string.IsNullOrEmpty(Model.CategoryId))
                                        {
                                            productUrl = $"{Model.Url().TrimEnd('/')}/{productSlug}";
                                        }
                                        // Otherwise, find the first category page that matches this product's categoryId
                                        else if (!string.IsNullOrEmpty(product.CategoryId))
                                        {
                                            // Search all category pages for one with matching categoryId
                                            var matchingCategoryPage = Model.Root().DescendantsOrSelf()
                                                .FirstOrDefault(x => x.ContentType.Alias == "categoryPage" &&
                                                                     x.Value<string>("categoryId") == product.CategoryId);

                                            if (matchingCategoryPage != null)
                                            {
                                                productUrl = $"{matchingCategoryPage.Url().TrimEnd('/')}/{productSlug}";
                                            }
                                        }
                                    }
                                    @if (productUrl != null)
                                    {
                                        <a href="@productUrl">
                                            <img src="@thumbnailImage"
                                                 class="card-img-top"
                                                 alt="@product.Name"
                                                 style="height: 200px; object-fit: cover;">
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="@thumbnailImage"
                                             class="card-img-top"
                                             alt="@product.Name"
                                             style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            @if (productUrl != null)
                                            {
                                                <a href="@productUrl" class="text-decoration-none text-dark">
                                                    @product.Name
                                                </a>
                                            }
                                            else
                                            {
                                                <span>@product.Name</span>
                                            }
                                        </h5>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <p class="card-text text-muted small flex-grow-1">
                                                @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                            </p>
                                        }
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <span class="h5 mb-0 text-primary">£@((product.Price ?? 0).ToString("N2"))</span>

                                            @{
                                                var hasStock = (product.StockQuantity ?? 0) > 0;
                                            }

                                            @if (hasStock)
                                            {
                                                <span class="badge bg-success">In Stock (@product.StockQuantity)</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Out of Stock</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No products found in this category.
                    </div>
                }
            </div>
        </div>
    }
</div>