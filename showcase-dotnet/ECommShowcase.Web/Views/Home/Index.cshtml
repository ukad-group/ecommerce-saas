@model ECommShowcase.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to @Model.StoreName</h1>
                <p class="lead">Discover amazing products at great prices. Shop now and enjoy fast shipping!</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-bag-check"></i> Shop Now
                </a>
            </div>
            <div class="col-lg-6">
                <img src="https://dummyimage.com/600x400/4a6ba8/ffffff&text=Shop+Now" class="img-fluid rounded" alt="Hero Image">
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
@if (Model.Categories.Any())
{
    <div class="container my-5">
        <h2 class="mb-4">Shop by Category</h2>
        <div class="row g-3">
            @foreach (var category in Model.Categories.Take(6))
            {
                <div class="col-md-4 col-lg-2">
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none">
                        <div class="card h-100 text-center hover-shadow">
                            <div class="card-body">
                                <i class="bi bi-tag fs-1 text-primary"></i>
                                <h6 class="card-title mt-2">@category.Name</h6>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

<!-- Featured Products Section -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Featured Products</h2>
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
            View All <i class="bi bi-arrow-right"></i>
        </a>
    </div>

    @if (Model.FeaturedProducts.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 hover-shadow">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@(product.ImageUrl ?? "https://dummyimage.com/300x200/6c757d/ffffff&text=" + Uri.EscapeDataString(product.Name))"
                                 class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                    @product.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <p class="card-text text-muted small flex-grow-1">
                                    @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                </p>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="h5 mb-0 text-primary">@Model.CurrencySymbol@((product.Price ?? 0).ToString("N2"))</span>
                                @if ((product.StockQuantity ?? 0) > 0)
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                            @if ((product.StockQuantity ?? 0) > 0)
                            {
                                <form asp-controller="Cart" asp-action="AddItem" method="post" class="mt-3">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100 mt-3" disabled>
                                    Out of Stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No products available at the moment. Please check back later.
        </div>
    }
</div>

<!-- Features Section -->
<div class="bg-light py-5 mt-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <i class="bi bi-truck fs-1 text-primary"></i>
                <h4 class="mt-3">Free Shipping</h4>
                <p class="text-muted">On orders over $50</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-shield-check fs-1 text-primary"></i>
                <h4 class="mt-3">Secure Payment</h4>
                <p class="text-muted">100% secure transactions</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-arrow-clockwise fs-1 text-primary"></i>
                <h4 class="mt-3">Easy Returns</h4>
                <p class="text-muted">30-day return policy</p>
            </div>
        </div>
    </div>
</div>
