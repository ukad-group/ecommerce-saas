@model ECommShowcase.Web.Models.ViewModels.ProductDetailViewModel
@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
            @if (Model.Category != null)
            {
                <li class="breadcrumb-item">
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.Category.Id">
                        @Model.Category.Name
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Product.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
            <div class="card">
                <img src="@(Model.Product.ImageUrl ?? "https://dummyimage.com/600x400/6c757d/ffffff&text=" + Uri.EscapeDataString(Model.Product.Name))"
                     class="card-img-top" alt="@Model.Product.Name" style="max-height: 500px; object-fit: contain;">
            </div>

            <!-- Custom Properties -->
            @if (Model.Product.CustomProperties != null && Model.Product.CustomProperties.Any())
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Specifications</h5>
                        <ul class="list-unstyled mb-0">
                            @foreach (var property in Model.Product.CustomProperties)
                            {
                                <li class="mb-2">
                                    <strong>@property.Name:</strong> @property.Value
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="display-5 fw-bold">@Model.Product.Name</h1>

            @if (Model.Category != null)
            {
                <p class="text-muted">
                    <i class="bi bi-tag"></i>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.Category.Id">
                        @Model.Category.Name
                    </a>
                </p>
            }

            <!-- Price (only show for non-variant products) -->
            @if (!Model.Product.HasVariants)
            {
                <div class="my-3">
                    <span class="display-6 text-primary fw-bold">@Model.CurrencySymbol@((Model.Product.Price ?? 0).ToString("N2"))</span>
                </div>
            }

            <!-- Stock Status (only show for non-variant products) -->
            @if (!Model.Product.HasVariants)
            {
                <div class="mb-3">
                    @if (Model.IsInStock)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle"></i> In Stock (@Model.Product.StockQuantity available)
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">
                            <i class="bi bi-x-circle"></i> Out of Stock
                        </span>
                    }
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Product.Description))
            {
                <div class="mb-4">
                    <h5>Description</h5>
                    <p class="lead">@Model.Product.Description</p>
                </div>
            }

            <!-- Product Variants -->
            @if (Model.Product.HasVariants && Model.Product.VariantOptions != null && Model.Product.VariantOptions.Any())
            {
                <div class="mb-4">
                    <h5>Select Options</h5>
                    @foreach (var option in Model.Product.VariantOptions)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">@option.Name</label>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var value in option.Values)
                                {
                                    <button type="button" class="btn btn-outline-primary variant-option"
                                            data-option="@option.Name"
                                            data-value="@value">
                                        @value
                                    </button>
                                }
                            </div>
                        </div>
                    }
                    <!-- Selected Variant Info -->
                    <div id="variant-info" class="mt-3" style="display: none;">
                        <div class="mb-3">
                            <span id="variant-price" class="display-6 text-primary fw-bold"></span>
                        </div>
                        <div class="mb-3">
                            <span id="variant-stock-badge" class="badge bg-success fs-6"></span>
                        </div>
                        <div class="text-muted small">
                            <strong>SKU:</strong> <span id="variant-sku"></span>
                        </div>
                    </div>

                    <!-- Prompt to select variant -->
                    <div id="variant-prompt" class="alert alert-warning mt-3">
                        <i class="bi bi-info-circle"></i> Please select all options to see price and availability
                    </div>
                </div>
            }

            <!-- Product Info -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Product Information</h5>
                    <ul class="list-unstyled mb-0">
                        <li><strong>SKU:</strong> @Model.Product.Sku</li>
                        <li><strong>Status:</strong> <span class="badge bg-info">@Model.Product.Status</span></li>
                    </ul>
                </div>
            </div>

            <!-- Add to Cart (hidden for variant products until selection made) -->
            <div id="add-to-cart-section" style="@(Model.Product.HasVariants ? "display: none;" : "")">
                @if (!Model.Product.HasVariants && Model.IsInStock)
                {
                    <form asp-controller="Cart" asp-action="AddItem" method="post">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                        <div class="input-group mb-3">
                            <span class="input-group-text">Quantity</span>
                            <input type="number" name="quantity" class="form-control" value="1" min="1" max="@Model.Product.StockQuantity" style="max-width: 100px;">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </form>
                }
                else if (!Model.Product.HasVariants)
                {
                    <button class="btn btn-secondary btn-lg w-100" disabled>
                        <i class="bi bi-x-circle"></i> Out of Stock
                    </button>
                }

                <!-- For variant products, this will be shown via JavaScript -->
                @if (Model.Product.HasVariants)
                {
                    <form asp-controller="Cart" asp-action="AddItem" method="post" id="variant-cart-form">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                        <input type="hidden" name="variantId" value="" id="selected-variant-id" />
                        <div class="input-group mb-3">
                            <span class="input-group-text">Quantity</span>
                            <input type="number" name="quantity" class="form-control" value="1" min="1" id="variant-quantity" style="max-width: 100px;">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1" id="variant-add-to-cart">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </form>
                }
            </div>

            <!-- Additional Actions -->
            <div class="d-grid gap-2 mt-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Products
                </a>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-truck fs-1 text-primary"></i>
                    <h5 class="card-title mt-3">Free Shipping</h5>
                    <p class="card-text text-muted">On orders over $50</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-shield-check fs-1 text-primary"></i>
                    <h5 class="card-title mt-3">Secure Payment</h5>
                    <p class="card-text text-muted">100% secure transactions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-arrow-clockwise fs-1 text-primary"></i>
                    <h5 class="card-title mt-3">Easy Returns</h5>
                    <p class="card-text text-muted">30-day return policy</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.Product.HasVariants && Model.Product.Variants != null)
    {
        <script>
            const variants = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product.Variants));
            const selectedOptions = {};

            document.querySelectorAll('.variant-option').forEach(button => {
                button.addEventListener('click', function() {
                    const option = this.dataset.option;
                    const value = this.dataset.value;

                    // Remove active class from siblings
                    document.querySelectorAll(`[data-option="${option}"]`).forEach(btn => {
                        btn.classList.remove('active');
                        btn.classList.replace('btn-primary', 'btn-outline-primary');
                    });

                    // Add active class to clicked button
                    this.classList.add('active');
                    this.classList.replace('btn-outline-primary', 'btn-primary');

                    // Store selection
                    selectedOptions[option] = value;

                    // Find matching variant
                    const matchingVariant = variants.find(v => {
                        return Object.keys(selectedOptions).every(key =>
                            v.Options && v.Options[key] === selectedOptions[key]
                        );
                    });

                    // Show variant info if all options selected
                    const allOptionsSelected = @Model.Product.VariantOptions.Count === Object.keys(selectedOptions).length;

                    if (allOptionsSelected && matchingVariant) {
                        // Update variant info
                        document.getElementById('variant-sku').textContent = matchingVariant.Sku || 'N/A';
                        document.getElementById('variant-price').textContent = '$' + (matchingVariant.SalePrice || matchingVariant.Price || 0).toFixed(2);

                        // Update stock badge
                        const stockBadge = document.getElementById('variant-stock-badge');
                        const isInStock = matchingVariant.StockQuantity > 0;
                        stockBadge.innerHTML = isInStock
                            ? '<i class="bi bi-check-circle"></i> In Stock (' + matchingVariant.StockQuantity + ' available)'
                            : '<i class="bi bi-x-circle"></i> Out of Stock';
                        stockBadge.className = isInStock ? 'badge bg-success fs-6' : 'badge bg-danger fs-6';

                        // Show/hide elements
                        document.getElementById('variant-info').style.display = 'block';
                        document.getElementById('variant-prompt').style.display = 'none';

                        // Show add to cart if in stock
                        if (isInStock) {
                            document.getElementById('add-to-cart-section').style.display = 'block';
                            document.getElementById('variant-quantity').max = matchingVariant.StockQuantity;
                            document.getElementById('selected-variant-id').value = matchingVariant.Id;
                        } else {
                            document.getElementById('add-to-cart-section').style.display = 'none';
                        }
                    } else {
                        document.getElementById('variant-info').style.display = 'none';
                        document.getElementById('variant-prompt').style.display = 'block';
                        document.getElementById('add-to-cart-section').style.display = 'none';
                    }
                });
            });
        </script>
    }
}
