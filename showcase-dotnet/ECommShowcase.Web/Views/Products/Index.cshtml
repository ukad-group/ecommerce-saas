@model ECommShowcase.Web.Models.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="container my-4">
    <div class="row">
        <!-- Sidebar with Categories -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Categories</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Products" asp-action="Index"
                       class="list-group-item list-group-item-action @(string.IsNullOrEmpty(Model.SelectedCategoryId) ? "active" : "")">
                        All Products
                    </a>
                    @{
                        // Build hierarchical category list
                        var hierarchicalCategories = new List<(CategoryDto category, int level)>();
                        var rootCategories = Model.Categories.Where(c => string.IsNullOrEmpty(c.ParentId)).OrderBy(c => c.DisplayOrder).ThenBy(c => c.Name).ToList();

                        void BuildHierarchy(CategoryDto category, int level)
                        {
                            hierarchicalCategories.Add((category, level));
                            var children = Model.Categories.Where(c => c.ParentId == category.Id).OrderBy(c => c.DisplayOrder).ThenBy(c => c.Name);
                            foreach (var child in children)
                            {
                                BuildHierarchy(child, level + 1);
                            }
                        }

                        foreach (var category in rootCategories)
                        {
                            BuildHierarchy(category, 0);
                        }
                    }

                    @foreach (var item in hierarchicalCategories)
                    {
                        var indent = item.level > 0 ? $"padding-left: {(item.level * 1.5 + 1)}rem;" : "";
                        var prefix = item.level > 0 ? "└─ " : "";

                        <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@item.category.Id"
                           class="list-group-item list-group-item-action @(Model.SelectedCategoryId == item.category.Id ? "active" : "")"
                           style="@indent">
                            @if (item.level > 0)
                            {
                                <span class="text-muted">@prefix</span>
                            }
                            @item.category.Name
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        @if (!string.IsNullOrEmpty(Model.SearchQuery))
                        {
                            <text>Search Results for "@Model.SearchQuery"</text>
                        }
                        else if (!string.IsNullOrEmpty(Model.SelectedCategoryId))
                        {
                            var selectedCategory = Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId);
                            <text>@selectedCategory?.Name</text>
                        }
                        else
                        {
                            <text>All Products</text>
                        }
                    </h2>
                    <p class="text-muted">@Model.TotalProducts products found</p>
                </div>
            </div>

            <!-- Products Grid -->
            @if (Model.Products.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 hover-shadow">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                    <img src="@(product.ImageUrl ?? "https://dummyimage.com/300x200/6c757d/ffffff&text=" + Uri.EscapeDataString(product.Name))"
                                         class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                            @product.Name
                                        </a>
                                    </h5>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <p class="card-text text-muted small flex-grow-1">
                                            @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                        </p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        @if (!product.HasVariants)
                                        {
                                            <span class="h5 mb-0 text-primary">@Model.CurrencySymbol@((product.Price ?? 0).ToString("N2"))</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Multiple options available</span>
                                        }

                                        @{
                                            var hasStock = false;
                                            if (product.HasVariants)
                                            {
                                                // Check if any variant has stock
                                                hasStock = product.Variants != null && product.Variants.Any(v => v.StockQuantity > 0);
                                            }
                                            else
                                            {
                                                hasStock = (product.StockQuantity ?? 0) > 0;
                                            }
                                        }

                                        @if (hasStock)
                                        {
                                            @if (!product.HasVariants)
                                            {
                                                <span class="badge bg-success">In Stock (@product.StockQuantity)</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">In Stock</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </div>

                                    @if (product.HasVariants)
                                    {
                                        <!-- For variant products, show "View Options" button -->
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100 mt-3">
                                            <i class="bi bi-eye"></i> View Options
                                        </a>
                                    }
                                    else if (hasStock)
                                    {
                                        <form asp-controller="Cart" asp-action="AddItem" method="post" class="mt-3">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary w-100 mt-3" disabled>
                                            Out of Stock
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Product pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Products" asp-action="Index"
                                       asp-route-categoryId="@Model.SelectedCategoryId"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-page="@(Model.CurrentPage - 1)">
                                        Previous
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-controller="Products" asp-action="Index"
                                       asp-route-categoryId="@Model.SelectedCategoryId"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="Products" asp-action="Index"
                                       asp-route-categoryId="@Model.SelectedCategoryId"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-page="@(Model.CurrentPage + 1)">
                                        Next
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No products found.
                    @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.SelectedCategoryId))
                    {
                        <a asp-controller="Products" asp-action="Index" class="alert-link">Clear filters</a>
                    }
                </div>
            }
        </div>
    </div>
</div>
